{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://127.0.0.1:5500/src/",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Screenshot Uploader",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "message": true,
        "confirm": true
      },
      "notification": {
        "all": true
      },
      "process": {
        "relaunch": true
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/icon.png"],
      "identifier": "rip.nest.screenshot",
      "longDescription": "This tool automatically uploads macos screenshots to nest.rip, and copies the resulting link to the clipboard",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["sounds/*", "images/*"],
      "shortDescription": "nest.rip's screenshot uploader",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
